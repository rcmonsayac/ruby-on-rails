<%= form_with scope: :article, url: create_article_path, local: true do |f|  %>
    <p>
        <% if @article.errors.any?  %>
            <ul>
                <% @article.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
                <% end %>
            </ul>
        <% end %>     
    </p>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>

<%=  link_to 'Back to Articles', articles_path %>

