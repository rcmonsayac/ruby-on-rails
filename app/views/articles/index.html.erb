
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= link_to article.id, show_article_path(article.id) %></td>   
                <td><%= article.title %></td>   
                <td class="td-body"><%= article.body %></td>
                <td><%= link_to 'Edit', edit_article_path(article.id) %></td>               
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Article', new_article_path %>


